.breadcrumbs
  = render_breadcrumbs :separator => ' / ' 
.content_tab
  - if @staff.belongs_to_management_group
    = link_to 'Management Task', new_staff_management_task_path(@staff.id), :class => "other_tab"
  - if @staff.belongs_to_data_collection_group
    = link_to 'Data Collection Task', new_staff_data_collection_task_path(@staff.id), :class => "other_tab" 
  %span.current_tab
    Miscellaneous Expense
  = link_to 'My Weekly Entries', by_staff_staff_weekly_expenses_path(:staff_id => @staff.id), :class => "other_tab"
  - if @staff.has_role(Role::STAFF_SUPERVISOR) && same_as_current_user(@staff)
    = link_to 'Weekly Staff Summary', staff_weekly_expenses_path, :class => "other_tab"